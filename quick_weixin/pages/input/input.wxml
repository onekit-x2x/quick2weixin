<view  class="page">
  <view  class="page-description">输入框</view>
  <view  class="page-section">
    <view  class="form-row">
      <view  class="form-row-label">受控聚焦</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" focus="{{focus}}" bindfocus="onFocus" bindblur="onBlur" placeholder="input something"></onekit-input>
      </view>
    </view>
    <view  class="page-section-btns">
      <button  size="mini" bindtap="bindButtonTap">聚焦</button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="form-row">
      <view  class="form-row-label"><onekit-label  for="controlled">显示输入</onekit-label></view>
      <view  class="form-row-content">
        <onekit-input  Class="input" id="controlled" bindinput="bindKeyInput" placeholder="show input content"></onekit-input>
      </view>
    </view>
    <view  class="extra-info">你输入的是：{{inputValue}}</view>
  </view>
  <view  class="page-section">
    <view  class="form-row">
      <view  class="form-row-label">最大长度</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" maxlength="10" placeholder="maxlength 10"></onekit-input>
      </view>
    </view>
    <view  class="form-line"></view>
    <view  class="form-row">
      <view  class="form-row-label">收起键盘</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" bindinput="bindHideKeyboard" placeholder="输入 123 自动收起键盘"></onekit-input>
      </view>
    </view>
    <view  class="form-line"></view>
    <view  class="form-row">
      <view  class="form-row-label">输入密码</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" password type="text" placeholder="密码输入框"></onekit-input>
      </view>
    </view>
    <view  class="form-line"></view>
    <view  class="form-row">
      <view  class="form-row-label">输入数字</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" type="number" placeholder="数字输入框"></onekit-input>
      </view>
    </view>
    <view  class="form-line"></view>
    <view  class="form-row">
      <view  class="form-row-label">小数点键盘</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" type="digit" placeholder="带小数点的数字键盘"></onekit-input>
      </view>
    </view>
    <view  class="form-line"></view>
    <view  class="form-row">
      <view  class="form-row-label">身份证键盘</view>
      <view  class="form-row-content">
        <onekit-input  Class="input" type="idcard" placeholder="身份证输入键盘"></onekit-input>
      </view>
    </view>
  </view>


  <view  class="page-section">
    <view  class="page-section-title">搜索框</view>
    <view  class="page-section-demo">
      <view  class="search-outer">
        <onekit-input  Class="search-input" placeholder="搜索" value="{{search}}" bindconfirm="doneSearch" bindinput="handleSearch"></onekit-input>
        <text  class="search-cancel" bindtap="clearSearch">取消</text>
      </view>
    </view>
  </view>
</view>
